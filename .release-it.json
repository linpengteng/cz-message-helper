{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "begin",
            "section": "🎉 Start New Repository"
          },
          {
            "type": "feat",
            "section": "✨ Features | 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes | Bug 修复"
          },
          {
            "type": "perf",
            "section": "🚀 Performance Improvements | 性能优化"
          },
          {
            "type": "revert",
            "hidden": "📝 Reverts | 回退"
          },
          {
            "type": "refactor",
            "section": "📦 Code Refactoring | 代码重构"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "commitMessage": "chore: add new tag and release v${version}"
  },
  "github": {
    "release": true,
    "draft": false,
    "web": true
  },
  "npm": {
    "publish": true
  }
}