{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "**/*.ts",
    "*.ts",
  ],
}